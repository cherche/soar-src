main(class=`${page.toLowerCase()} container`)
  .row
    .col-lg-8.mx-auto
      .card: .card-body
        h5.card-title Delegates
        p.card-text Want to be a delegate? <strong>Grade 7 and 8 students in the Peel Region</strong> are welcome to join SOAR as Delegates. Applications are not available right now, but keep an eye out! Applications will release in April (soon!).
        div(class="tooltip-wrapper" data-toggle="tooltip" data-placement="right" title="Not available yet")
          a(href="#" class="btn btn-primary disabled") Apply to be a Delegate
    .col-sm
      .card: .card-body
        h5.card-title Leadership Developers
        p.card-text LD applications are <strong>now closed for SOAR 2021</strong>. To returning high school students: keep an eye out for next year's SOAR Conference!
        div(class="tooltip-wrapper" data-toggle="tooltip" data-placement="right" title="Now closed")
          a(href="apply-ld.html" class="btn btn-secondary") Apply to be an LD

.container
  include mixins/prefooter.pug
  +prefooter(page)
